  ^{ :arglists '(
          "(rectangle x y width height)") 
     :doc """
          Creates a :java.awt.Rectangle.
          """
     :examples '(
          """
          (do
            (load-module :images)
            (images/rectangle 0 0 200 100))
          """ ) }

  rectangle [x y width height]

  (assert (long? x))
