;;;; XChart

;;;; Install XChart 3rd party libraries:
;;;;
;;;;   (load-module :xchart-install)
;;;;   (xchart-install/install :dir (repl/libs-dir) :silent false)


(ns xchart-install)


(defn libraries []
  [ "org.knowm.xchart:xchart:3.8.6" ])

(defn
  ^{ :arglists '("(install options*)")
     :doc
       """
       Install the Java 3rd party libraries for the XChart module.

       Options:

       | :dir path             | download dir, defaults to "." |
       | :silent {true,false}  | if silent is true does not show a progress bar, defaults to true |
       """
     :examples '(
       """
       (do
         (load-module :xchart-install)
         (xchart-install/install :dir (repl/libs-dir) :silent false))
       """) }

  install [ & options]

  (let [opts     (apply hash-map options)
        silent   (:silent opts true)
        dir      (:dir opts ".")]
    (load-module :maven)
    (run! #(maven/download % :dir dir :silent silent) (libraries))))
