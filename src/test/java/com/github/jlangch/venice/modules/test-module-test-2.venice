;;;; TEST framework unit test


;;; Testing deftest with multiple namespaces
(do
  (load-module :test)


  (ns m-test-1)

  (test/deftest test-deftest-single-assert-ok []
    (assert-eq 3 (+ 1 2)))

  (test/deftest test-deftest-multi-assert-fail-1 []
    (assert-eq 3 (+ 1 2))
    (assert-eq 0 (+ 1 2)))



  (ns m-test-2)

  (test/deftest test-deftest-multi-assert-ok []
    (assert-eq 3 (+ 1 2))
    (assert-eq 3 (+ 1 2)))

  (test/deftest test-deftest-multi-assert-fail-2 []
    (assert-eq 0 (+ 1 2))
    (assert-eq 0 (+ 1 2)))


  ;; run tests
  (test/run-tests 'm-test-1 'm-test-2))
