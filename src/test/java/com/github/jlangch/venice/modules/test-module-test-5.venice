;;;; TEST framework unit test


(do
  (load-module :test)

  (ns m-test)

  (test/deftest explicit-setup-teardown []
    (let [f (io/temp-file "test-", ".txt")]                  ;; setup
      (try
        (io/spit f "1234" :append true)                      ;; setup
        (assert-eq "1234" (io/slurp f :binary false))        ;; test
        (finally
          (io/delete-file f)))))                             ;; teardown


  ;; run tests
  (test/run-tests 'm-test))
