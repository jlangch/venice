;;;; GREP unit test


(do
  (load-module :grep)

  (def content1
        """
        line 1  BBB
        line 2  AAA
        line 3  BBB
        line 4  BBB
        line 5  BBB
        line 6  BBB
        line 7  BBB
        line 8  AAA
        """)

  (def content2
        """
        line 1  BBB
        line 2  BBB
        line 3  BBB
        line 4  BBB
        line 5  BBB
        line 6  BBB
        line 7  BBB
        line 8  AAA
        """)

 (def content3
        """
        line 1  BBB
        line 2  BBB
        line 3  BBB
        line 4  BBB
        line 5  BBB
        line 6  BBB
        line 7  BBB
        line 8  BBB
        """)

  (defn lines [s]
    (io/slurp-lines (io/string-in-stream s)))

  (def dir (io/temp-dir "grep-"))
  (def f1  (io/file dir "step.log"))
  (def f2  (io/file dir "step.log.2022-04-01"))
  (def f3  (io/file dir "step.log.2022-05-01"))
  (def f4  (io/file dir "step.log.2022-06-01"))
  (def zip (io/file dir "step.2022-05.zip"))

  (io/spit f1 content1)
  (io/spit f2 content1)
  (io/spit f3 content2)
  (io/spit f4 content3)
  (io/zip-file zip f2 f3 f4)

  (io/delete-file-on-exit dir)
  (io/delete-file-on-exit f1)
  (io/delete-file-on-exit f2)
  (io/delete-file-on-exit f3)
  (io/delete-file-on-exit f4)
  (io/delete-file-on-exit zip)

  ;; ==========================================================================
  ;; grep

  ;; grep machine readable ----------------------------------------------------
  (def r1 (grep/grep dir "step.log.*" ".*AAA.*" :print false))
  (assert (= 3 (count r1)))
  (assert (= "step.log.2022-04-01::2::line 2  AAA" (str/join "::" (first r1))))
  (assert (= "step.log.2022-04-01::8::line 8  AAA" (str/join "::" (second r1))))
  (assert (= "step.log.2022-05-01::8::line 8  AAA" (str/join "::" (third r1))))

  ;; grep machine readable (no matching files) --------------------------------
  (def r1 (grep/grep dir "---step.log.*" ".*AAA.*" :print false))
  (assert (= 0 (count r1)))

  ;; grep machine readable (no matching lines) --------------------------------
  (def r1 (grep/grep dir "step.log.*" ".*ZZZ.*" :print false))
  (assert (= 0 (count r1)))

  ;; grep human readable -------------------------------------------------------
  (def r1 (lines (with-out-str (grep/grep dir
                                          "step.log.*"
                                          ".*AAA.*"
                                          :print true))))
  (assert (= "step.log.2022-04-01:2:line 2  AAA" (first r1)))
  (assert (= "step.log.2022-04-01:8:line 8  AAA" (second r1)))
  (assert (= "step.log.2022-05-01:8:line 8  AAA" (third r1)))

  ;; grep human readable (no matching files) ----------------------------------
  (def r1 (lines (with-out-str (grep/grep dir
                                          "---step.log.*"
                                          ".*AAA.*"
                                          :print true))))
  (assert (= 0 (count r1)))

  ;; grep human readable (no matching lines) ----------------------------------
  (def r1 (lines (with-out-str (grep/grep dir
                                          "step.log.*"
                                          ".*ZZZ.*"
                                          :print true))))
  (assert (= 0 (count r1)))


  ;; ==========================================================================
  ;; grep-zip

  ;; grep-zip machine readable ------------------------------------------------
  (def r1 (grep/grep-zip dir
                         "step.*.zip"
                         "step.log.*"
                         ".*AAA.*"
                         :print false))
  (assert (= 3 (count r1)))
  (assert (= "step.2022-05.zip::step.log.2022-04-01::2::line 2  AAA" (str/join "::" (first r1))))
  (assert (= "step.2022-05.zip::step.log.2022-04-01::8::line 8  AAA" (str/join "::" (second r1))))
  (assert (= "step.2022-05.zip::step.log.2022-05-01::8::line 8  AAA" (str/join "::" (third r1))))

  ;; grep-zip machine readable (no matching zip) ------------------------------
  (def r1 (grep/grep-zip dir
                         "---step.*.zip"
                         "step.log.*"
                         ".*AAA.*"
                         :print false))
  (assert (= 0 (count r1)))

  ;; grep-zip machine readable (no matching files) ----------------------------
  (def r1 (grep/grep-zip dir
                         "step.*.zip"
                         "---step.log.*"
                         ".*AAA.*"
                         :print false))
  (assert (= 0 (count r1)))

  ;; grep-zip machine readable (no matching lines) ----------------------------
  (def r1 (grep/grep-zip dir
                         "step.*.zip"
                         "step.log.*"
                         ".*ZZZ.*"
                         :print false))
  (assert (= 0 (count r1)))

  ;; grep-zip human readable --------------------------------------------------
  (def r1 (lines (with-out-str (grep/grep-zip dir
                                              "step.*.zip"
                                              "step.log.*"
                                              ".*AAA.*"
                                              :print true))))
  (assert (= 3 (count r1)))
  (assert (= "step.2022-05.zip!step.log.2022-04-01:2:line 2  AAA" (first r1)))
  (assert (= "step.2022-05.zip!step.log.2022-04-01:8:line 8  AAA" (second r1)))
  (assert (= "step.2022-05.zip!step.log.2022-05-01:8:line 8  AAA" (third r1)))

  ;; grep-zip machine readable (no matching zip) ------------------------------
  (def r1 (lines (with-out-str (grep/grep-zip dir
                                              "---step.*.zip"
                                              "step.log.*"
                                              ".*AAA.*"
                                              :print true))))
  (assert (= 0 (count r1)))

  ;; grep-zip machine readable (no matching files) ----------------------------
  (def r1 (lines (with-out-str (grep/grep-zip dir
                                              "step.*.zip"
                                              "---step.log.*"
                                              ".*AAA.*"
                                              :print true))))
  (assert (= 0 (count r1)))

  ;; grep-zip machine readable (no matching lines) ----------------------------
  (def r1 (lines (with-out-str (grep/grep-zip dir
                                              "step.*.zip"
                                              "step.log.*"
                                              ".*ZZZ.*"
                                              :print true))))
  (assert (= 0 (count r1)))
)
